{
  "compilerOptions": {
    "target": "ES2020",                     // Modern JS target
    "module": "ESNext",       
    "jsx": "react-jsx",              // Works with Vite
    "lib": ["DOM", "ESNext"],               // Include browser + modern features
    "types": ["react", "react-dom"],
    "strict": true,                         // Enable strict TypeScript checks
    "moduleResolution": "Node",
    "esModuleInterop": true,                // Allows 'import express from "express"'
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "dist"                        // Compiled output (optional)
  },
  "include": [
    "src",                                  // Frontend
    "src/functions"                  // Backend Firebase functions
  ],
  "exclude": ["node_modules"]
}
